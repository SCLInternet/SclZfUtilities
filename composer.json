{
    "name": "sclinternet/scl-zf-utilities",
    "description": "A useful set of classes and interfaces for developing Zend Framework 2 applications",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/SCLInternet/SclZfUtilities",
    "authors": [
        {
            "name": "Tom Oram",
            "email": "tom@scl.co.uk",
            "homepage": "http://github.com/tomphp"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.3.3",
        "zendframework/zendframework" : "2.*@stable",
        "sclinternet/scl-zf-generic-mapper": "*"
    },
    "require-dev": {
        "doctrine/doctrine-orm-module": "dev-master",
        "phpunit/phpunit" : "3.7.*",
        "squizlabs/php_codesniffer" : "1.*",
        "phpmd/phpmd" : "1.4.0",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-0": {
            "SclZfUtilities": "src/"
        }
    }
}
